{
  "private": true,
  "version": "5.7.5",
  "engines": {
    "vscode": "^1.56.2"
  },
  "name": "vscode-halon",
  "displayName": "Halon Configuration Packer",
  "publisher": "Halon",
  "description": "Halon Configuration Packer",
  "author": {
    "name": "Halon Security AB"
  },
  "categories": [],
  "keywords": [
    "halon",
    "hsl"
  ],
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "title": "Halon",
      "properties": {
        "halon.build.exclude": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Source files inside `src/files` that should be omitted when building the `smtpd-app.yaml` file"
        }
      }
    },
    "commands": [
      {
        "command": "halon.init",
        "title": "Init",
        "category": "Halon"
      },
      {
        "command": "halon.build",
        "title": "Build",
        "category": "Halon"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "smtpd.yaml",
        "url": "./dist/json-schemas/5.7/smtpd.schema.json"
      },
      {
        "fileMatch": "smtpd-app.yaml",
        "url": "./dist/json-schemas/5.7/smtpd-app.schema.json"
      },
      {
        "fileMatch": "smtpd-policy.yaml",
        "url": "./dist/json-schemas/5.7/smtpd-policy.schema.json"
      },
      {
        "fileMatch": "smtpd-suspend.yaml",
        "url": "./dist/json-schemas/5.7/smtpd-suspend.schema.json"
      },
      {
        "fileMatch": "smtpd-delivery.yaml",
        "url": "./dist/json-schemas/5.7/smtpd-delivery.schema.json"
      },
      {
        "fileMatch": "dlpd.yaml",
        "url": "./dist/json-schemas/5.7/dlpd.schema.json"
      },
      {
        "fileMatch": "dlpd-app.yaml",
        "url": "./dist/json-schemas/5.7/dlpd-app.schema.json"
      },
      {
        "fileMatch": "rated.yaml",
        "url": "./dist/json-schemas/5.7/rated.schema.json"
      },
      {
        "fileMatch": "rated-app.yaml",
        "url": "./dist/json-schemas/5.7/rated-app.schema.json"
      },
      {
        "fileMatch": "api.yaml",
        "url": "./dist/json-schemas/5.7/api.schema.json"
      },
      {
        "fileMatch": "web.yaml",
        "url": "./dist/json-schemas/5.7/web.schema.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:hsl",
    "onCommand:halon.init",
    "onCommand:halon.build"
  ],
  "qna": false,
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "webpack --config ./webpack.config.js",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --devtool nosources-source-map --config ./webpack.config.js",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-ext": "webpack --mode production --config ./webpack.config.js",
    "docs": "npm --prefix node_modules/@halon/hsl-docs install && npm --prefix node_modules/@halon/hsl-docs run build && cp node_modules/@halon/hsl-docs/dist/json/* src/docs/"
  },
  "bugs": {
    "url": "https://github.com/halon/vscode-extensions/issues",
    "email": "support@halon.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halon/vscode-extensions"
  },
  "homepage": "https://github.com/halon/vscode-extensions",
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "devDependencies": {
    "@halon/hsl-docs": "github:halon/hsl-docs#4287aa72d014ff4e4d2934b21b00f93c2339d39c",
    "@types/is-utf8": "^0.2.0",
    "@types/node": "^15.12.2",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "vsce": "^1.100.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@halon/json-schemas": "github:halon/json-schemas#2e8d496f0a44411380678f34d59688afe0e38c2b",
    "ajv": "^6.10.2",
    "is-utf8": "^0.2.1",
    "minimatch": "^3.0.4",
    "yaml": "^1.10.0"
  },
  "main": "./dist/extension"
}
