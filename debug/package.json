{
  "private": true,
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.56.2"
  },
  "name": "hsl-debug",
  "displayName": "Halon Scripting Language Debugger",
  "publisher": "Halon",
  "description": "Halon Scripting Language Debugger",
  "author": {
    "name": "Halon Security AB"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "halon",
    "hsl"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#062B36",
    "theme": "dark"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "hsl"
      }
    ],
    "debuggers": [
      {
        "type": "hsl",
        "languages": [
          "hsl"
        ],
        "label": "Halon Scripting Language",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the program."
              },
              "debug": {
                "type": "boolean",
                "description": "If debugging should be enabled."
              },
              "plugins": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "The plugins that should be enabled."
              },
              "config": {
                "type": "string",
                "description": "Absolute path to the startup configuration that should be used."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug File",
            "type": "hsl",
            "request": "launch",
            "program": "${file}",
            "debug": true
          },
          {
            "name": "Run File",
            "type": "hsl",
            "request": "launch",
            "program": "${file}",
            "debug": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "Halon Scripting Language: Debug File",
            "body": {
              "name": "Debug File",
              "type": "hsl",
              "request": "launch",
              "program": "${file}",
              "debug": true
            }
          },
          {
            "label": "Halon Scripting Language: Run File",
            "body": {
              "name": "Run File",
              "type": "hsl",
              "request": "launch",
              "program": "${file}",
              "debug": false
            }
          }
        ]
      }
    ]
  },
  "activationEvents": [
    "onDebugResolve:hsl"
  ],
  "qna": false,
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "webpack --config ./webpack.config.js",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./webpack.config.js",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-ext": "webpack --mode production --config ./webpack.config.js"
  },
  "bugs": {
    "url": "https://github.com/halon/vscode-extensions/issues",
    "email": "support@halon.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halon/vscode-extensions"
  },
  "homepage": "https://github.com/halon/vscode-extensions",
  "extensionDependencies": [
    "Halon.vscode-halon"
  ],
  "devDependencies": {
    "@halon/protobuf-schemas": "github:halon/protobuf-schemas#5ba078e5408e19ca95b62ce83efa3ec11f4f3436",
    "@types/node": "^14.17.1",
    "@types/path-is-inside": "^1.0.0",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "ts-loader": "^8.3.0",
    "typescript": "^4.2.3",
    "vsce": "^1.93.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "path-is-inside": "^1.0.2",
    "protobufjs": "^6.11.2",
    "tree-kill": "^1.2.2",
    "vscode-debugadapter": "^1.46.0",
    "yaml": "^1.10.2"
  },
  "main": "./dist/extension.js"
}
