{
  "private": true,
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "name": "hsl-linter",
  "displayName": "Halon Scripting Language Linter",
  "publisher": "Halon",
  "description": "Halon Scripting Language Linter",
  "author": {
    "name": "Halon Security AB"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "halon",
    "hsl"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#062B36",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:hsl"
  ],
  "qna": false,
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "vsce publish",
    "format": "prettier --write ."
  },
  "bugs": {
    "url": "https://github.com/halon/vscode-extensions/issues",
    "email": "support@halon.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halon/vscode-extensions"
  },
  "homepage": "https://github.com/halon/vscode-extensions",
  "devDependencies": {
    "@types/is-utf8": "^0.2.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/path-is-inside": "^1.0.0",
    "@types/underscore": "^1.11.2",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "is-utf8": "^0.2.1",
    "path-is-inside": "^1.0.2",
    "underscore": "^1.13.1",
    "yaml": "^1.10.2"
  },
  "main": "./dist/extension.js"
}
