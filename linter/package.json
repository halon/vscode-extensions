{
  "private": true,
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "name": "hsl-linter",
  "displayName": "Halon Scripting Language Linter",
  "publisher": "Halon",
  "description": "Halon Scripting Language Linter",
  "author": {
    "name": "Halon Security AB"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "halon",
    "hsl"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#062B36",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:hsl"
  ],
  "qna": false,
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "webpack --config ./webpack.config.js",
    "lint": "tsc --noEmit && eslint src/**/*.{js,cjs,mjs,ts,cts,mts} --report-unused-disable-directives --max-warnings 0",
    "watch": "webpack --watch --devtool nosources-source-map --config ./webpack.config.js",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-ext": "webpack --mode production --config ./webpack.config.js",
    "format": "prettier --write ."
  },
  "bugs": {
    "url": "https://github.com/halon/vscode-extensions/issues",
    "email": "support@halon.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halon/vscode-extensions"
  },
  "homepage": "https://github.com/halon/vscode-extensions",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/is-utf8": "^0.2.0",
    "@types/node": "^15.12.2",
    "@types/path-is-inside": "^1.0.0",
    "@types/underscore": "^1.11.2",
    "@types/vscode": "^1.56.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.2.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "is-utf8": "^0.2.1",
    "path-is-inside": "^1.0.2",
    "underscore": "^1.13.1",
    "yaml": "^1.10.2"
  },
  "main": "./dist/extension.js"
}
