{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
